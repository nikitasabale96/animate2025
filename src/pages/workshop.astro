---
import Main from '../layouts/main.astro';
import workshopimage from '../images/thumbnail_400x280.jpeg';
import blenderimage from '../images/thumb-workshop.png';

const workshops = [
{
    topic: "Workshop on Submission Preparation & Blender Studio Demo",
    date: "07 August, 2025",
    time: "3:00 – 4:00 PM",
    image: blenderimage.src,
    video: {
      url: "https://www.youtube.com/embed/Iwlf7P6tboo",
      type: "youtube"
    }
  },
  {
    topic: "Workshop on Submission Preparation & Synfig Studio Demo",
    date: "30 July, 2025",
    time: "3:00 – 4:00 PM",
    video: {
      url: "https://static.fossee.in/focal/ANIMATE2025/Workshop/Workshop%20on%20Submission%20Preparation%20%26%20Synfig%20Studio%20Demo%2030-07-2025.mp4",
    },
    image: workshopimage.src,
  },
  

 
];
---
<Main>
  <div class="flex flex-col items-center py-8 space-y-16">
    {workshops.map(workshop => (
      <div class="flex flex-col items-center">
        <!-- Title -->
        <h1 class="text-2xl md:text-4xl  font-[Montserrat], sans-serif mb-4 text-center">
          {workshop.topic}
        </h1>

        <!-- Thumbnail -->
        <div class="relative inline-block group">
          {workshop.video?.url ? (
            <a href={workshop.video.url} target="_blank" rel="noopener noreferrer">
              <img 
                src={workshop.image}
                alt={workshop.topic}
                width="400"
                height="280"
                class="rounded-lg shadow-md transition-transform duration-300 ease-in-out group-hover:scale-105 border-4 border-gray-300"
              />
              <!-- Play Icon Overlay -->
              <span class="absolute inset-0 flex items-center justify-center">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="w-16 h-16 text-red-600"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path d="M8 5v14l11-7z" />
                </svg>
              </span>
            </a>
          ) : (
            <img 
              src={workshop.image}
              alt={workshop.topic}
              width="400"
              height="280"
              class="rounded-lg shadow-md border-4 border-gray-300"
            />
          )}
        </div>

        {workshop.video?.url && (
          <p class="text-red-600 text-sm mt-2">Click on thumbnail to play</p>
        )}
<!-- Date and Time-->
{/* <p class="mt-4 mb-4 text-lg">
  <strong>Date:&nbsp;</strong> {workshop.date} &nbsp; <strong>Time:&nbsp;</strong> {workshop.time}
</p> */}
<p class="mt-4 mb-4 text-lg bg-yellow-200 text-black px-4 py-2 rounded-md shadow-sm">
  <strong>Date:&nbsp;</strong> {workshop.date} &nbsp;&nbsp; <strong>Time:&nbsp;</strong> {workshop.time}
</p>


        <!-- Divider -->
        {/* <hr class="w-full max-w-md mt-6 border-gray-400" /> */}
      </div>
      
    ))}
  </div>
</Main>
